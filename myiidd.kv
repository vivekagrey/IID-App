<MainScreen>:
    name: 'main'
    ActionBar:
        top: root.top
        size: root.width, 100
        ActionView:
            use_separator: True
            separator_width: 5
            markup: True
            #SearchBar:
              #  on_text_validate: self.search()
            ActionPrevious:
                title: 'IID App'
                with_previous: False
            ActionButton:
                text: 'Settings'
                on_release: app.open_settings()
            ActionOverflow:
                ActionButton:
                    text: 'T & Cs'
                    on_release: app.root.current = "terms_and_conditions"
                ActionButton:
                    text: 'About Us'
                    on_release: app.root.current = "about_us"
                ActionButton:
                    text: 'FAQs'
                    on_release: app.root.current = "faqs"

    GridLayout:
        size: root.width, root.height
        padding:50, 180, 50, 80
        spacing:10,10
        cols: 3
        Buttonmain:
            text:"Login"
            on_release: app.root.current = "login"
        Buttonmain:
            text:"Drone\nPilot\nTraining"
            on_release: app.root.current = "drone_pilot_training"
        Buttonmain:
            text:"Weather"
            on_release: app.root.current = "weather"
        Buttonmain:
            text:"Drone\nInsurance"
            on_release: app.root.current = "drone_insurance"
        Buttonmain:
            text:"IID\nOnline\nTest"
            on_release: app.root.current = "online_test"
        Buttonmain:
            text:"Fly\nZones"
            on_release: app.root.current = "fly_zones"
        Buttonmain:
            text:"Drone\nService\nCentre"
            on_release: app.root.current = "drone_service_centre"
        Buttonmain:
            text:"Drone\nStore"
            on_release: app.root.current = "drone_store"
        Buttonmain:
            text:"More"
            on_release: app.root.current = "more"
<Buttonmain>:
    markup:True
    background_normal: ""
    background_color:(0,0,0,0)
    canvas.before:
        Color:
            rgba: (.4,.4,.4,1) if self.state=='normal' else (0,.7,.7,1)  # visual feedback of press
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10,]
